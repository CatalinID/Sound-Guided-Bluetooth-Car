<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radar"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/soundRight"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/soundRightDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundRightUp"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundLeft"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/soundLeftDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundLeftUp"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundRightDown"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="64dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundDown"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="150dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundLeftDown"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginBottom="104dp"
        android:layout_marginStart="64dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundUp"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="26dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/soundRightUp"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/target" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="122dp"
        android:layout_height="115dp"
        android:layout_marginBottom="241dp"
        android:layout_marginEnd="145dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="246dp"
        android:adjustViewBounds="false"
        android:contentDescription="@android:string/no"
        android:cropToPadding="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car" />

    <ImageView
        android:id="@+id/soundLeftUp"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginStart="64dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@android:string/no"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/target" />

</android.support.constraint.ConstraintLayout>